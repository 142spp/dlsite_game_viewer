<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 공통 브러시를 라이트 모드에 맞게 정의 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFEEEE"/>
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="DarkRed"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PlaceholderBrush" Color="DarkGray"/>
    
    <!-- 스크롤바 관련 브러시 -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ScrollBarHoverBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ScrollBarPressedBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#999999"/>
    <SolidColorBrush x:Key="ScrollBarArrowBrush" Color="#666666"/>
    
    <!-- 다이얼로그 타이틀바 관련 브러시 -->
    <SolidColorBrush x:Key="DialogTitleBarBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="DialogTitleBarTextBrush" Color="#333333"/>
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFF"/>
    
</ResourceDictionary> 